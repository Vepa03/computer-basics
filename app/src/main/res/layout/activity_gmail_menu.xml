<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_background"
    tools:context=".gmail_menu">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/tool_menu"
        app:layout_constraintBottom_toTopOf="@+id/guideline38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/need_help"
        app:titleTextColor="@color/black" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline118"
        app:layout_constraintEnd_toStartOf="@+id/guideline116"
        app:layout_constraintStart_toStartOf="@+id/guideline115"
        app:layout_constraintTop_toTopOf="@+id/guideline117"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:fontFamily="@font/dudling_around"
                android:text="@string/send_us_email"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/send_to_gmail_name"
                app:layout_constraintEnd_toStartOf="@+id/guideline120"
                app:layout_constraintStart_toStartOf="@+id/guideline119"
                app:layout_constraintTop_toTopOf="@+id/guideline122" />

            <EditText
                android:id="@+id/send_to_gmail_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/gmail_name"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/guideline123"
                app:layout_constraintEnd_toStartOf="@+id/guideline120"
                app:layout_constraintStart_toStartOf="@+id/guideline119"
                app:layout_constraintTop_toTopOf="@+id/guideline124" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline119"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <EditText
                android:id="@+id/subject_name_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:hint="@string/subject_name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/pink"
                app:layout_constraintBottom_toTopOf="@+id/guideline125"
                app:layout_constraintEnd_toStartOf="@+id/guideline120"
                app:layout_constraintStart_toStartOf="@+id/guideline119"
                app:layout_constraintTop_toBottomOf="@+id/send_to_gmail_name" />

            <EditText
                android:id="@+id/compose_email_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:hint="@string/compose_email"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/pink"
                app:layout_constraintBottom_toTopOf="@+id/guideline126"
                app:layout_constraintEnd_toStartOf="@+id/guideline120"
                app:layout_constraintStart_toStartOf="@+id/guideline119"
                app:layout_constraintTop_toBottomOf="@+id/subject_name_id" />

            <Button
                android:id="@+id/send_gmail_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/send_button_background"
                android:elevation="20dp"
                android:fontFamily="@font/dudling_around"
                android:gravity="center"
                android:text="@string/send_button_text"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline121"
                app:layout_constraintEnd_toStartOf="@+id/guideline120"
                app:layout_constraintStart_toStartOf="@+id/guideline119"
                app:layout_constraintTop_toTopOf="@+id/guideline127" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline124"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6
" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline126"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline127"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline116"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline118"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"/>

</androidx.constraintlayout.widget.ConstraintLayout>